	bool
	depends on COMCERTO_DIAG
	prompt "C2000 Diagnostics"
	default y
	help
	  Start C2000 diagnostics.

config CMD_PFE_COMMANDS
	bool
	prompt "PFE lib commands"
	default y if ARCH_COMCERTO
	help
	  This command allows PFE lib functions to be called.

