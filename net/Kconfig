menuconfig NET
	bool "Networking Support            "

if NET

config NET_DHCP
	bool
	prompt "dhcp support"

config NET_NFS
	bool
	prompt "nfs support"

config NET_PING
	bool
	prompt "ping support"

config NET_TFTP
	bool
	prompt "tftp support"

config NET_TFTP_PUSH
	bool
	prompt "tftp push support"

config NET_NETCONSOLE
	bool
	prompt "network console support"
	help
	  This option adds support for a simple udp based network console.

config NET_RESOLV
	bool
	prompt "dns support"

